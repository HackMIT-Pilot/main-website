@import '_settings'

blue = #4f7ee9
orange = darken(blue, 30%)
bluegreen = #76A8A9
yellow = #FFCF69
bordersize = 2px
borderdist = -10px
sfont = Arvo, serif
ssfont = "Whitney HTF", "Whitney HTF Light", "Whitney HTF Book", "Open Sans", "Segoe UI", sans-serif
maxwidth = 1200px
normalize()
base()

body
    font-smoothing antialiased
    text-rendering optimizeLegibility
    background blue
    background linear-gradient(top, blue 7%, darken(blue, 20%) 30%)
    color white
    font-family ssfont
    font-weight 300
    font-size 22px
    line-height 1.4

a
    text-decoration none

    &:hover
        border-bottom 1px solid blue

#wrapper
    position relative
    max-width 1100px
    margin 0px auto

.bordertext
    color orange
    font-weight 500

.image-bg
    width 200%
    height 200%
    position absolute
    top -50%
    left -50%

    img
        min-width 50%
        min-height 50%
        position absolute
        top 25%
        left 25%

p
    margin 19px 0

h1,h2,h3,h4,h5,h6
    font-weight normal
h1
    font-family: sfont
    font-size: 120px;
    margin-top 0
    margin-bottom: 0

    &.sans
        font-family: ssfont

h2
    font-family: ssfont
    font-weight 200
    font-size: 56px
    margin .5em 0
    

h3
    font-family: ssfont 
    font-weight 200
    font-size: 30px
    margin-top: 0

h4
    font-family sfont
    font-size 40px
    margin .5em 0
    text-transform uppercase

h5
    font-family: ssfont
    font-size 24px
    margin 0

.section
    background-size cover
    background-position center center
    background-repeat no-repeat
    width 100%
    overflow hidden
    position relative
    padding 20px 0px 35px 0px
    box-sizing border-box

    a
        color white

    &.short
        background blue
        background linear-gradient(top, blue 0%, darken(blue, 40%) 100%)

    &.white
        background white
        color #444

        a
            color blue

    &.light
        background #eee
        color #000

        a
            color blue

    &.dark
        background #333
        color white
        a
            color blue

    &.sponsors
        img
            height 80px
            margin-right 40px
            margin-bottom 30px
            opacity 1

        .sponsorlogo
            margin-top: -10px
            a
                display inline-block
                line-height 75px
                padding 10px 0
                margin 2px

                &:hover
                    text-decoration none
                    border 0
                    opacity 0.7
                img
                    max-height 60px
                    width auto

.sponsorlogo
    #mit
    #techx
        //
    #google
        max-height 80px
        vertical-align -22px
        margin-left 10px
        opacity 1

#first
    margin-left -300px
    a:hover
        border-bottom 1px solid #fff

#pilot
    margin-left 400px
    font-style italic
    margin-top -20px
    a:hover
        border-bottom 1px solid #fff
    img
        opacity 0.9
        height 50px
        vertical-align -5px

.wrap, header 
    max-width maxwidth
    margin 0px auto

.content
    max-width 900px


.upper
    text-transform uppercase

.small
    font-family ssfont
    font-size 18px


.button
    background white
    font-family ssfont
    font-weight 500
    font-size 29px
    color blue
    padding 20px 23px 19px 23px
    text-transform uppercase
    display inline-block
    margin-right 25px
    text-decoration none
    border 1px solid white

    &:hover
        border 1px solid #fff

    &.register
        border 0
        margin-top 20px
        margin-bottom 40px
        color blue
        padding 30px 46px 26px 43px
        font-size 46px
        transition: all 200ms;
        background #eee
        background linear-gradient(top, #fff 7%, #eee 100%)

        &:hover
            background #fff
            background linear-gradient(top, #eee 7%, #fff 100%)
            transition: all 200ms;
            hover-pop: 1.2 3deg true

    &.small
        padding 0
        background transparent
        font-family ssfont
        font-size 18px
        position relative
        bottom 3px
        border 0px

        &:hover
            border-bottom 1px solid white

#google
    margin-top 28px
    text-align center
    opacity 0.7
    line-height 0.3em
    letter-spacing 0.11em
    text-transform uppercase
    img
        width 180px
        margin-top 18px
        opacity 1
        margin-left -7px
    span
        letter-spacing 0.09em
        margin-top -16px

.social
    margin 0
    float right
    #facebook, #twitter
        display inline-block
        margin 0
        margin-top 20px
        float right

.wrap
    padding 0 50px
    box-sizing border-box


.leader
    line-height 1
    text-align center
    background url(../img/dome_transparent_big.png)
    background-size auto 120%

    h2
        font-size 54px

    h3
        margin-top -20px
        line-height 1.4

.white.register
    text-align left

header
    box-sizing border-box
    margin-top 90px
    font-size 1.4em
    width 100%
    text-align center
    position relative
    clearfix()

nav
    padding 0
    margin 0
    z-index 1
    position fixed
    top 0
    left 0
    width 100%
    background #333
    border-bottom: 1px solid #fff

    li
        margin 0
        padding 0

    a
        margin 0
        display inline-block
        padding 15px 17px
        color white
        font-size 24px
        font-family ssfont
        font-weight 500
        &:hover
            background bluegreen
            color white
            border 0

        &.current
            background bluegreen

        &.register
            background #fff
            margin-left 20px
            color blue
            text-transform uppercase
            hover-pop: 1.1 3deg true
            transition: all 200ms;

            &:hover
                background #fff
                color blue
                transition: all 200ms;


.google-maps
    position: relative
    height: 0
    overflow: hidden

    iframe
        position: absolute
        top: 0
        left: 0
        width: 100% !important
        height: 100% !important

footer
    .top
        display none
        border 0
    p
        display block
    h4
        font-size 18px
        margin-right 30px
        display inline

    .break
        clearfix()

    a:hover
        border-color #ddd

// form
.register
    h3
        border-top: 1px dotted #ddd
        padding-top: 10px

.clear
    clear: both
    margin-bottom: 50px

.noheight
    height 0
    margin 0
    padding 0

.register
    label
        font-weight bold
        width: 170px
        line-height: 1.0em
        margin-right: 10px
    span
        width: 70%
        margin-left: 180px
        line-height: 1.0em
        font-style: italic
        margin-bottom: 42px
        margin-top: -20px
    label, span
        display: inline-block
        float: left
        clear: left
        margin-top: 10px
    input, select, textarea
        display: inline-block
        float: left
        margin-top: 5px
        margin-bottom: 7px
        font-size: 22px
        padding: 3px 4px
    #saveform
        padding 10px
    .selectlabel
        margin-top: 13px

    select
        border-color #999
        margin: 10px 0

    span#laptop
        margin-top: -8px

#otherdietary
    display: none
    margin-left: 10px

#skills
    clear: both
    display: block
    margin-left: 170px

    .skill
        float: left

        label, input
            font-weight: normal

        label
            margin-top: -18px
            margin-left: 20px

#shortanswer
    label
        width: 280px
    textarea
        width: 60%
        height: 150px

#parentcontact
    label
        width: 280px

.mentor
    input[type='text'], input[type='email']
        width 390px
    span
        margin-left 288px
    label
        width: 280px
    #nametag
        width 390px

#mentoranswer
    textarea
        width: 60%
        height: 150px

#safety
    #safetywaiver, #mentorwaiver
        font-size: 18px
        border: 1px solid #ddd
        padding: 10px
        height: 400px
        overflow-y: scroll
        h4
            font-size: 24px

    #mentorwaiver
        margin-top: 20px

#submit
    #altemail
        display: none

// logistics
#map-canvas
    height: 300px
    width: 100%
    img
        max-width: none

.logistics
    .four
        column(4)
        margin-left 0
        padding-left 0
        margin-right 0
        padding-right 0
    
    .red
        background #fa2c27
        color #fff
        padding 3px 5px
        font-weight bold

    h3
        margin-bottom: 0
    
    table
        tr
            td
                &:first-child
                    width: 30%
                    text-align: right
                    padding-right: 20px



.six
    column(6)
    margin 0
    padding 0 20px
    background-clip content-box

    h5
        font-weight 700
        padding-top 20px

.faq
    h5
        color darken(blue, 40%)

@import '_mq'
