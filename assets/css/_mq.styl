@import '_settings'


// smaller header
@media(max-width: 1200px)
    h1
        font-size 100px
    h2
        font-size 48px
    h3
        font-size 30px
    #first
        margin-left -210px

    #pilot
        margin-left 300px


@media(max-width: 900px)
    h1
        font-size 100px
    .wrap
        padding-left 40px
        padding-right 40px


@media(max-width: 768px)
    #headwrap
        padding 0 10px
    .borders
        display none

    .leader
        background url(../img/dome_transparent_mobile.png)
        background-size auto 130%

    .wrap
        padding-left 10px
        padding-right 10px
    h1
        font-size 72px
    .leader h2
        margin-top 30px
        font-size 40px
    h3#google
        font-size 24px
        img
            width 150px
    #first, #pilot
        margin 0
        text-align center
    footer
        .top
            display inline
    .sponsorlogo
        a
            margin 4px
            padding 4px
            height 60px

@media(max-width: 650px)
    nav
        background darken(blue, 30%)
        position relative
        margin 0
        a
            display inline-block
            font-size 20px
            padding 10px 15px
            &:hover
                color darken(blue, 30%)
                background #fff
            &.register
                background 0
                padding 10px 15px
                color #fff
                margin 0
                &:hover
                    color darken(blue, 30%)
                    background #fff
                    hover-pop: 1
    header
        margin-top 20px
    .button
        &.register
            font-size 36px
            padding 15px 16px 16px 23px
            transition: 0
            &:active
                color darken(blue, 30%)
                background #fff
    .social
        padding-left 40px
    .section
        &.sponsors
            img, a
                height 30px
                padding 4px
                margin 5px
                vertical-align 0
            #google
                height 40px
                vertical-align -10px
                margin-top -10px
            h5
                margin-top 10px
                font-size 18px
    h2
        font-size 36px
    .faq
        .wrap, .six
            width 100%
            margin 0
            padding 0
        h5
            font-size 24px
        span
            font-size 20px
            line-height 0.8em
            font-weight 500
        h3
            font-size 28px
            font-weight 700
            margin-bottom 10px
            margin-top 30px
            background darken(blue, 30%)
            padding 15px 5px
            color #fff
    .register
        span
            display none
        textarea#why
            width 90%
            height 170px
    footer
        a
            border-bottom 1px solid #fff
        .links
            padding-top 10px
            h4
                display block
                a
                    border-bottom 0

@media(max-width: 400px)
    .leader
        background url(../img/dome_transparent_iphone.png)
        background-size auto 110%
        background-position 0 -50px
        h2
            font-size 32px
    header
        margin-top 0px
        h1
            font-size 65px
        #first, #pilot
            font-size 26px
    .social
        display none
    h3#google
        font-size 18px
        opacity 1
        margin-top 0px
        img
            margin-top 5px
            width 100px
    .sponsorlogo
        a
            margin 4px
            padding 4px
        #google
            float left
            margin-top -10px
    .register
        margin 0
    h2
        font-size 26px
    h3
        font-size 18px