@import '_settings'


// smaller header
@media(max-width: 1200px)
    h1
        font-size 100px
    h2
        font-size 48px
    h3
        font-size 30px
    #first
        margin-left -210px

    #pilot
        margin-left 300px


@media(max-width: 900px)
    h1
        font-size 100px
    .wrap
        padding-left 40px
        padding-right 40px
    .section
        &.sponsors
            img
                height 50px
                margin 5px
        .sponsorlogo
            a
                margin 5px
                padding 15px
            #google
                vertical-align -15px
                height 60px
                margin 0


@media(max-width: 768px)
    #headwrap
        padding 0 10px
    .borders
        display none

    .leader
        background url(../img/dome_transparent_mobile.png)
        background-size auto 130%

    .wrap
        padding-left 10px
        padding-right 10px
    h1
        font-size 72px
    .leader h2
        margin-top 30px
        font-size 40px
    h3#google
        font-size 24px
        img
            width 150px
    #first, #pilot
        margin 0
        text-align center
    .section
        &.sponsors
            img
                height 50px
                margin 0
        .sponsorlogo
            a
                margin 0
                padding 5px
            #google
                vertical-align 0
                margin 0

